<?xml version="1.0"?>
<robot name="nexus_ads" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <link name="base_footprint" />
    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_footprint" />
        <child link="base_link" />
        <origin xyz="0 0 0.0" />
    </joint>

    <link name="base_link">
        <visual>
            <origin xyz="0 0 0.10" />
            <geometry>
                <box size="0.3 0.2 0.1" />
            </geometry>
            <material name="blue">
                <color rgba="0 0 1 1" />
            </material>
        </visual>

        <collision>
            <origin xyz="0 0 0.10" />
            <geometry>
                <box size="0.3 0.2 0.1" />
            </geometry>
        </collision>

        <inertial>
            <mass value="5.0" />
            <origin xyz="0 0 0" />
            <inertia ixx="0.1" iyy="0.1" izz="0.1"
                ixy="0" ixz="0" iyz="0" />
        </inertial>
    </link>

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="left_wheel" />
        <origin xyz="0 0.1 0.05" />
        <axis xyz="0 1 0" />
    </joint>

    <link name="left_wheel">
        <visual>
            <origin rpy="1.5708 0 0" />
            <geometry>
                <cylinder radius="0.05" length="0.02" />
            </geometry>
            <material name="black">
                <color rgba="0 0 0 1" />
            </material>
        </visual>

        <collision>
            <origin rpy="1.5708 0 0" />
            <geometry>
                <cylinder radius="0.05" length="0.02" />
            </geometry>
        </collision>

        <inertial>
            <mass value="0.5" />
            <origin xyz="0 0 0" />
            <inertia ixx="0.001" iyy="0.001" izz="0.001"
                ixy="0" ixz="0" iyz="0" />
        </inertial>
    </link>

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="right_wheel" />
        <origin xyz="0 -0.1 0.05" />
        <axis xyz="0 1 0" />
    </joint>

    <link name="right_wheel">
        <visual>
            <origin rpy="1.5708 0 0" />
            <geometry>
                <cylinder radius="0.05" length="0.02" />
            </geometry>
            <material name="black">
                <color rgba="0 0 0 1" />
            </material>
        </visual>

        <collision>
            <origin rpy="1.5708 0 0" />
            <geometry>
                <cylinder radius="0.05" length="0.02" />
            </geometry>
        </collision>

        <inertial>
            <mass value="0.5" />
            <origin xyz="0 0 0" />
            <inertia ixx="0.001" iyy="0.001" izz="0.001"
                ixy="0" ixz="0" iyz="0" />
        </inertial>
    </link>

    <link name="caster_wheel_front">
        <visual>
            <geometry>
                <sphere radius="0.03" />
            </geometry>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.03" />
            </geometry>
        </collision>
        <inertial>
            <mass value="0.2" />
            <inertia ixx="0.0001" iyy="0.0001" izz="0.0001"
                ixy="0" ixz="0" iyz="0" />
        </inertial>
    </link>
    <joint name="caster_front_joint" type="fixed">
        <parent link="base_link" />
        <child link="caster_wheel_front" />
        <origin xyz="0.12 0 0.03" />
        <axis xyz="0 0 1" />
    </joint>

    <link name="caster_wheel_back">
        <visual>
            <geometry>
                <sphere radius="0.03" />
            </geometry>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.03" />
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" />
            <mass value="0.2" />
            <inertia ixx="0.0001" iyy="0.0001" izz="0.0001"
                ixy="0" ixz="0" iyz="0" />
        </inertial>
    </link>
    <joint name="caster_back_joint" type="fixed">
        <parent link="base_link" />
        <child link="caster_wheel_back" />
        <origin xyz="-0.12 0 0.03" />
        <axis xyz="0 0 1" />
    </joint>

    <plugin filename="gz-sim-joint-state-publisher-system"
        name="gz::sim::systems::JointStatePublisher">
        <topic>joint_states</topic>
        <joint_name>left_wheel_joint</joint_name>
        <joint_name>right_wheel_joint</joint_name>
    </plugin>
</robot>